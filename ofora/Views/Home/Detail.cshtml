@model oforadata.Data.image
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section pageCss{


    <link href="~/css/datail.css" rel="stylesheet" />
}

@section pageScripts{

    <script>



        $(function () {

            setactive(0);
        });

    </script>
    <script src="~/js/detail.js"></script>
    <script>


      $(document).ready(function () {


            $("#bir").click(function () {

                @*var bidi= ("http://localhost:54254/" + @Model.folderName2);*@
                console.log("merhaba")

                 $.ajax({
                     metod: "POST",
                     url: "/Home/Guncelle",
                     data: { id: 1, id2: @Model.id},
                     success: function (d) {

                         $("#big").html(d);

                     },
                     error: function (d) {
                         console.log(d);
                     }


                 });

          });
           $("#iki").click(function () {



                 $.ajax({
                     metod: "POST",
                     url: "/Home/Guncelle",
                     data: { id: 2, id2: @Model.id},
                     success: function (d) {

                         $("#big").html(d);

                     },
                     error: function (d) {
                         console.log(d);
                     }


                 });



            });

            $("#uc").click(function () {



                 $.ajax({
                     metod: "POST",
                     url: "/Home/Guncelle",
