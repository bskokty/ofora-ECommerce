
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section pageScripts{

    <script>



        $(function () {

            setactive(2);
        });

    </script>
}
<section id="form" style="margin-top: 40px;">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                @if (@ViewBag.hata == null)
                {
                    <h2>Hesabınıza Giriş Yapın</h2>
                }
                @if (@ViewBag.hata != null)
                {
                    <small>@ViewBag.hata</small>
                }
                    <form action="/Account/login" method="post">
                        <input type="email" placeholder="Kullanıcı adınız veya email" name="userName"}
" />
                        <input type="text" placeholder="Parola" name="password"/>
                       
                        <button type="submit" class="btn btn-default">Giriş</button>
                        
                    </form>
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">VEYA</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Yeni Kullanıcı</h2>
                    <form action="Giris" method="post">
                        <input type="text" placeholder="Name"  />
                        <input type="email" placeholder="Email" name="Email" />
                        <input type="password" placeholder="Parola" name="Parola"/>
                        <button type="submit" class="btn btn-default">Kayıt Ol</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
