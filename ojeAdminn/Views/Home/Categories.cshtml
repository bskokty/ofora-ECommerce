@model List<oforadata.Data.category>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("Yeni Kategori Ekle","add","",new {@class= "btn btn-success sagkenar" })
@section pageScripts{

    <script>



        $(function () {

            setactive(0);
        });
</script>
    }


<table class="table table-striped">
    <thead>
        <tr class="table-success">
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col"></th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">-</th>
                <td>@item.name</td>
                <td>@Html.ActionLink("Güncelle","guncelle",new {id=@item.Id }) | | @Html.ActionLink("Sil", "sil", new { id = @item.Id })</td>
         
            </tr>
        }
       
    
    </tbody>
</table>